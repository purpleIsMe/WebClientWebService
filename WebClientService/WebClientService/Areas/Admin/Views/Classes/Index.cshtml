@model Model.EF.Class
@using Model.EF
@{
    ViewBag.Title = "Index";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
    SelectList listLecturer = ViewBag.ListLecturers;
}
@section js
{
    <script src="~/Assets/Admin/js/class.js"></script>
}
@section Header
{
    DANH SÁCH LỚP
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DANH SÁCH LỚP
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-lg-3">
                    <div class="form-group">
                        <a id="btnCreate" class="btn btn-success" onclick='return createClass()'>Thêm mới lớp</a>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="form-group">
                        <div class="control-label col-md-4">Chọn giảng viên</div>
                        <div class="col-md-6">
                            @Html.DropDownListFor(model => model.IDLecturer, listLecturer, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.IDLecturer, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-success" id="filter">Lọc giảng viên</button>
                        </div>
                     </div>
                 </div>
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Điều khiển</th>
                            <th>Tên giảng viên</th>
                            <th>Tên lớp</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>

                <div class="modal fade" id="bookModal">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title"><label id="title"></label></h4>
                            </div>
                            <div class="modal-body">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <div class="col-md-10" id="monthi">
                                            <div>
                                                @Html.Label("Giảng viên")
                                                @Html.DropDownListFor(model => model.IDLecturer, listLecturer, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.IDLecturer, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <input type="hidden" class="form-control" id="Id" />
                                            <label>Tên lớp</label>
                                            <input type="text" id="NameClass" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <label>Trạng thái</label>
                                            <input type="checkbox" id="Status" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" id="btnClose" class="btn btn-default" data-dismiss="modal">Đóng</button>
                                <button type="button" id="btnSave" class="btn btn-primary">Cập nhật</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
