@{
    ViewBag.Title = "Index";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section js
{
    <script src="~/Assets/Admin/js/dechuan.js"></script>
}
@section Header
{
    QUẢN LÝ ĐỀ CHUẨN
}
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Thông tin ca thi
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Khóa thi</label>
                    </div>
                    <div class="col-md-7">
                        <select style="width:90%; height:35px"  id="khoathi">
                        </select>
                    </div>
                </div><br /><br />
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Ca thi</label>
                    </div>
                    <div class="col-md-7">
                        <select style="width:90%; height:35px" id="cathi"></select>
                    </div>
                </div><br /><br />
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Môn thi</label>
                    </div>
                    <div class="col-md-7">
                        <select style="width:90%; height:35px" id="monthi"></select>
                    </div>
                </div>
            </div>            
        </div>
    </div>
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Thông tin đề chuẩn
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Tên đề chuẩn</label>
                    </div>
                    <div class="col-md-7">
                        <input id="tendechuan" class="form-control" />
                    </div>
                </div><br /><br />
                <div class="form-group">
                    <div class="col-md-3">
                    <label>Số lượng đề trộn</label>
                    </div>
                    <div class="col-md-7">
                        <input type="number" id="soluongdetron" value="1" min="1" style="height:35px">
                    </div>
                </div><br /><br />
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Thời gian thi</label>
                    </div>
                    <div class="col-md-7">
                        <input type="number" id="thoigian" value="20" min="2" style="height:35px">
                        <label>(phút)</label><br/><br/>
                        <center> <button id="taodechuan" class="btn btn-success">Tạo đề chuẩn</button></center>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Đề chuẩn được tạo
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Xử lý</th>
                            <th>Tên đề chuẩn</th>
                            <th>Môn thi</th>
                            <th>Số lượng đề trộn</th>
                            <th>Thời gian thi</th>
                            <th>Trạng thái trộn</th>
                            <th>Khóa đề</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
