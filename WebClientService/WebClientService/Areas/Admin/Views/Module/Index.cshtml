@model Model.EF.Subject
@using Model.EF
@{
    ViewBag.Title = "Index";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
    SelectList listsubj = ViewBag.ListSubject;
    string tendescr = ViewBag.descr;
}
@section js
{
<script src="~/Assets/Admin/js/module.js"></script>
}
@section Header
{
    DANH SÁCH MODULE
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DANH SÁCH MODULE
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-lg-3">
                    <div class="form-group">
                        <!--href="~/Admin/Module/Create"-->
                        <a id="btnCreate" class="btn btn-success" onclick='return createQClass()'>Thêm mới module</a>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="form-group">
                        @Html.Label("Xin vui lòng chọn môn cần lọc")

                        @Html.DropDownListFor(model => model.idSub, listsubj, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.idSub, "", new { @class = "text-danger" })
                        <button type="submit" class="btn btn-success" id="filter">Lọc môn thi</button>
                      
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Điều khiển</th>
                            <th>Tên môn thi</th>
                            <th>Tên module</th>
                            <th>Số câu hỏi được lấy</th>
                            <th>Chú thích</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                      
                    </tbody>
                </table>

                <div class="modal fade" id="bookModal">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title"><label id="title"></label></h4>
                            </div>
                            <div class="modal-body">
                                <div class="form-horizontal">
                                    <div class="form-group" >
                                        <div class="col-md-10" id="monthi">
                                           <div>
                                               @Html.Label("Môn thi")
                                               @Html.DropDownListFor(model => model.idSub, listsubj, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.idSub, "", new { @class = "text-danger" })
                                           </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <input type="hidden" class="form-control" id="Id" />
                                            <label>Tên module</label>
                                            <input type="text" id="NameModule" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <label>Số câu hỏi được lấy</label>
                                            <input type="text" id="NumQues" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <label>Chú thích</label>
                                            <input type="text" id="Note" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <label>Trạng thái</label>
                                            <input type="checkbox" id="Status" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" id="btnClose" class="btn btn-default" data-dismiss="modal">Đóng</button>
                                <button type="button" id="btnSave" class="btn btn-primary">Cập nhật</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>