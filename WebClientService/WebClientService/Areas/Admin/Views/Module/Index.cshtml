@model Model.EF.QClass
@using Model.EF
@{
    ViewBag.Title = "Index";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<QClass> listqc = ViewBag.ListQC;
    SelectList listsubj = ViewBag.ListSubject;
    string tendescr = ViewBag.descr;
}
@section Header
{
    DANH SÁCH MODULE
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DANH SÁCH MODULE
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-lg-3">
                    <div class="form-group">
                        <a href="~/Admin/Module/Create">Thêm mới module</a>
                    </div>

                </div>
                @using (Html.BeginForm("Index", "Module", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return myFunction()" }))
                {
                    <br />
                <div class="form-group">
                        @Html.Label("Xin vui lòng chọn môn cần lọc")
                
                        @Html.DropDownListFor(model=>model.idsu, listsubj, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.idsu, "", new { @class = "text-danger" })
                    <input type="submit" value="Lọc" class="btn btn-default" />
                </div>
                }
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Điều khiển</th>
                            <th>Tên môn thi</th>
                            <th>Tên module</th>
                            <th>Số câu hỏi được lấy</th>
                            <th>Chú thích</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (listqc != null)
                        {
                            foreach (var item in listqc)
                            {
                                <tr class="odd gradeX" id="row_@item.IDQClass" onload="loadstt()">
                                    <td>
                                        <a href="/Admin/Module/Edit/@item.IDQClass"> Sửa </a>
                                        |
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.IDQClass }, new AjaxOptions
                                       {
                                           Confirm = "Bạn có muốn xóa bản ghi này không?",
                                           OnComplete = "$('#row_" + @item.IDQClass + "').remove()",
                                           HttpMethod = "Delete"
                                       })
                                    </td>
                                    <td>@tendescr</td>
                                    <td>@item.Descr</td>
                                    <td>@item.ClassNbr</td>
                                    <td>@item.ChuThich</td>
                                    <td>@(item.TrangThai == true ? "Cho phép sử dụng" : "Không được phép sử dụng")</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>