@model Model.EF.KHOATHI
@using Model.EF
@{
    ViewBag.Title = "Index";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
    SelectList listSchedule = ViewBag.ListSchedules;
}
@section js
{
    <script src="~/Assets/Admin/js/cathi.js"></script>
}
@section Header
{
    DANH SÁCH CA THI
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DANH SÁCH CA THI
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-lg-3">
                    <div class="form-group">
                        <a id="btnCreate" class="btn btn-success" onclick='return createSchedule()'>Thêm mới ca thi</a>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Điều khiển</th>
                            <th>Mã khóa thi</th>
                            <th>Tên ca thi</th>
                            <th>Giờ bắt đầu</th>
                            <th>Giờ kết thúc</th>
                            <th>Ngày thi</th>
                            <th>Trạng thái</th>
                            <th>Hoàn thành</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>

                <div class="modal fade" id="bookModal">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title"><label id="title"></label></h4>
                            </div>
                            <div class="modal-body">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <div class="col-md-10" id="monthi">
                                            <div>
                                                @Html.Label("Khóa thi")
                                                @Html.DropDownListFor(model => model.MaKhoaThi, listSchedule, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.MaKhoaThi, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <label>Tên ca thi</label>
                                            <input type="text" id="Ca" class="form-control" />
                                        </div>
                                    </div>
                                    <div id="datetimepicker2" class="input-append">
                                        <label>Giờ bắt đầu</label>
                                        <input data-format="HH:mm:ss PP" type="text" id="GioBatDau"></input>
                                        <span class="add-on">
                                            <i data-time-icon="icon-time" data-date-icon="icon-calendar">
                                            </i>
                                        </span>
                                    </div>
                                    <div id="datetimepicker4" class="input-append">
                                        <label>Giờ kết thúc</label>
                                        <input data-format="HH:mm:ss PP" type="text" id="GioKetThuc"></input>
                                        <span class="add-on">
                                            <i data-time-icon="icon-time" data-date-icon="icon-calendar">
                                            </i>
                                        </span>
                                    </div>
                                    <div id="datetimepicker3" class="input-append">
                                        <label>Ngày thi</label>
                                        <input data-format="MM/dd/yyyy" type="text" id="Ngay"></input>
                                        <span class="add-on">
                                            <i data-time-icon="icon-time" data-date-icon="icon-calendar">
                                            </i>
                                        </span>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <label>Trạng thái</label>
                                            <input type="checkbox" id="TrangThai" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <label>Đã hoàn thành</label>
                                            <input type="checkbox" id="DaHoanThanh" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" id="btnClose" class="btn btn-default" data-dismiss="modal">Đóng</button>
                                <button type="button" id="btnSave" class="btn btn-primary">Cập nhật</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
