@using Model.EF.CaThi

@{
    ViewBag.Title = "Schedule";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    
    string mess = ViewBag.Message;
}
@section Header
{
    THÊM MỚI CA THI
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Nhập thông tin ca thi
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("Index", "Schedule", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.Label("Chọn ngày thi", htmlAttributes: new { @class = "control-label col-md-6" })

                                @Html.DisplayFor(Model=>Model.Ngay, "ShortDateTime", new { htmlAttributes = new { @class = "form-control" } })
                            
                            
                            </div>
                            <div class="form-group">
                                @Html.Label("Chọn module", htmlAttributes: new { @class = "control-label col-md-6" })

                                @Html.DropDownListFor(model => model.SelectedModule, listmod, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="form-group">
                                @Html.Label("Chọn file dữ liệu", htmlAttributes: new { @class = "control-label col-md-6" })

                                @Html.TextBox("file", "", new { type = "file" })
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Import dữ liệu" class="btn btn-default" />
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("message", mess, new { @class = "text-danger" })
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

