@model Model.EF.Student
@using System.Collections.Generic
@using Model.EF

@{
    List<Student> listu = ViewBag.ListStu;
    SelectList userList = ViewBag.ID;
    SelectList lecturerList = ViewBag.ListLec;
}
@{
    ViewBag.Title = "Convert";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Header
{
    QUẢN LÝ SINH VIÊN
}

@section js
{
    <script src="~/Assets/Admin/js/student.js"></script>
}
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Quản lý ca thi của sinh viên
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Khóa thi</label>
                    </div>
                    <div class="col-md-7">
                        <select style="width:90%; height:35px" id="khoathi"></select>
                    </div>
                </div><br /><br />
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Ca thi</label>
                    </div>
                    <div class="col-md-7">
                        <select style="width:90%; height:35px" id="cathi"></select>
                    </div>
                </div><br /><br />
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Môn thi</label>
                    </div>
                    <div class="col-md-7">
                        <select style="width:90%; height:35px" id="monthi"></select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Chuyển đổi danh sách sinh viên
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="form-group" id="dlLecturer">
                    <div class="col-md-3">
                        <label>Chọn giảng viên</label>
                    </div>
                    <div class="col-md-7">
                        <select style="width:90%; height:35px" id="lecturer"></select>
                    </div>
                </div><br /><br />
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Chọn lớp</label>
                    </div>
                    <div class="col-md-7">
                        <select style="width:90%; height:35px" id="class"></select>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <br />
                    <center>
                        <div class="col-md-5">
                            <input type="submit" value="Cấp tài khoản sinh viên cho lớp" id="btnGetAccount" class="btn btn-primary" />
                        </div>
                        <div class="col-md-5">
                            <input type="submit" value="Phân đề cho thí sinh" id="btnPhanDe" class="btn btn-primary" />
                        </div>
                    </center>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách sinh viên
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="dssv">
                    <thead>
                        <tr>
                            <th>Hoạt động</th>
                            <th>Họ và tên</th>
                            <th>Tên ND</th>
                            <th>Mật khẩu</th>
                            <th>Địa chỉ IP</th>
                            <th>Mã đề thi</th>
                            <th>Giới tính</th>
                            <th>Ngày sinh</th>
                            <th>Địa chỉ</th>
                            <th>Điện thoại</th>
                            <th>CMND</th>
                            <th>Email</th>
                            <th>Thời gian</th>
                            <th>Đã hoàn thành</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
         </div>
    </div>
</div>
