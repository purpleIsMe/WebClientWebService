@model Model.EF.Student
@using Model.DAO
@using System
@using System.Collections.Generic
@using Model.EF

@{
    List<Student> listu = ViewBag.ListStu;
    SelectList userList = ViewBag.ID;
}
@{
    ViewBag.Title = "Index";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Header
{
    DANH SÁCH NGƯỜI DÙNG
}

@section js
{
    <script>
        $(document).ready(function() {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DANH SÁCH NGƯỜI DÙNG
            </div>
            @using (Html.BeginForm("Index", "Students", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return myFunction()" }))
            {
                <div class="form-horizontal">
                    <div class="form-group">
                        <br /><br />
                        <div class="control-label col-md-2">Excel:</div>
                        <div class="col-md-10">
                            <input type="file" id="FileUpload" name="FileUpload" class="" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="control-label col-md-2">Chọn lớp</div>
                        <div class="col-md-10">
                            @Html.DropDownListFor(Model => Model.IDClass, userList, new { @id = "classes", @class = "form-control" })
                            @Html.ValidationMessageFor(Model => Model.IDClass, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="control-label col-md-2"></div>
                        <div class="col-md-10">
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Upload" id="btnSubmit" class="btn btn-primary" />
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DANH SÁCH SINH VIÊN
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Hoạt động</th>
                            <th>Họ và tên</th>
                            <th>Địa chỉ</th>
                            <th>Ngày sinh</th>
                            <th>Email</th>
                            <th>Điện thoại</th>
                            <th>Facebook</th>
                            <th>Zalo</th>
                            <th>Skype</th>
                            <th>Biệt danh</th>
                            <th>Tình trạng</th>
                            <th>Hiện trạng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (listu != null)
                        {
                            foreach (var item in listu)
                            {
                                <tr class="odd gradeX" id="row_@item.ID" onload="loadstt()">
                                    <td>
                                        <a href="/Admin/Students/Edit/@item.ID"> Sửa </a>
                                        |
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xóa bản ghi này không?",
                                       OnComplete = "$('#row_" + @item.ID + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.Address</td>
                                    <td>@item.Born.ToShortDateString()</td>
                                    <td>@item.Email</td>
                                    <td>@item.Mobile</td>
                                    <td>@item.Facebook</td>
                                    <td>@item.Zalo</td>
                                    <td>@item.Skype</td>
                                    <td>@item.UserName</td>
                                    <td>@(item.Active? "Hoạt động" : "Bị khóa")</td>
                                    <td>@(item.Status?"Đang hoạt động":"Chưa hoạt động")</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>