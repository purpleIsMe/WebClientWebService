@model Model.EF.Subject
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Header
{
    CHỈNH SỬA MÔN THI
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Chỉnh sửa thông tin môn thi
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("Edit", "Subject", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(Model => Model.SubjectNbr, htmlAttributes: new { @class = "control-label col-md-6" })

                                @Html.TextBoxFor(Model => Model.SubjectNbr, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(Model => Model.SubjectNbr, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(Model => Model.Descr, htmlAttributes: new { @class = "control-label col-md-6" })

                                @Html.TextBoxFor(Model => Model.Descr, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(Model => Model.Descr, "", new { @class = "text-danger" })
                            </div>
                                <div class="form-group">
                                    @Html.LabelFor(Model => Model.MinPoint, htmlAttributes: new { @class = "control-label col-md-6" })

                                    @Html.TextBoxFor(Model => Model.MinPoint, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(Model => Model.MinPoint, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(Model => Model.MaxPoint, htmlAttributes: new { @class = "control-label col-md-6" })

                                    @Html.TextBoxFor(Model => Model.MaxPoint, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(Model => Model.MaxPoint, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(Model => Model.loop, htmlAttributes: new { @class = "control-label col-md-6" })

                                    @Html.TextBoxFor(Model => Model.loop, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(Model => Model.loop, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(Model => Model.MaxUsed, htmlAttributes: new { @class = "control-label col-md-6" })

                                    @Html.TextBoxFor(Model => Model.MaxUsed, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(Model => Model.MaxUsed, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(Model => Model.Locked, htmlAttributes: new { @class = "control-label col-md-6" })

                                    @Html.CheckBoxFor(Model => Model.Locked, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                    @Html.ValidationMessageFor(Model => Model.Locked, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(Model => Model.qBack, htmlAttributes: new { @class = "control-label col-md-6" })

                                    @Html.CheckBoxFor(Model => Model.qBack, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(Model => Model.qBack, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Create" class="btn btn-default" />
                                    </div>
                                </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
