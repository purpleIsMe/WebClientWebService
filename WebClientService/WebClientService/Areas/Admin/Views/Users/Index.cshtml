@Model PagedList.IPagedList<Model.EF.User>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Header
{
    DANH SÁCH NGƯỜI DÙNG
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DANH SÁCH NGƯỜI DÙNG
            </div>
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Tác vụ</th>
                            <th>Tài khoản</th>
                            <th>Họ tên</th>
                            <th>Địa chỉ</th>
                            <th>Chức vụ</th>
                            <th>Điện thoại</th>
                            <th>Email</th>
                         </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {                   
                            foreach (var item in Model)
                            {
                                 <tr class="odd gradeX">
                                     <td>
                                         <a href = "/Admin/Users/Edit/@item.ID" > Sửa </a>
                                                    |
                                         <a href="/Admin/Users/Delete/@item.ID">Xóa</a>
                                     </td>
                                     <td>@item.UserName</td>
                                     <td>@item.Name</td>
                                     <td>@item.Address</td>
                                     <td>@item.Position</td>
                                     <td>@item.Mobile</td>
                                     <td>@item.Email</td>
                                 </tr>
                            }
                        }
                    </tbody>
                </table>
                            @*@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))*@
             </div>
                        <!-- /.table-responsive -->
         </div>
                    <!-- /.panel-body -->
   </div>
            <!-- /.panel -->
</div>
<script src="/Assets/Admin/js/sb-admin-2.js"></script>