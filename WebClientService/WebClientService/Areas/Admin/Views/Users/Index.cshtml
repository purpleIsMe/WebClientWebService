@using Model.EF
@{
    List<User> us = ViewBag.DSU;
    ViewBag.Title = "Index";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section js
{
    <script>
        $(document).ready(function() {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>   
}
@section Header
{
    DANH SÁCH NGƯỜI DÙNG
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DANH SÁCH NGƯỜI DÙNG
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Tác vụ</th>
                            <th>Tài khoản</th>
                            <th>Họ tên</th>
                            <th>Địa chỉ</th>
                            <th>Chức vụ</th>
                            <th>Điện thoại</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (us != null)
                        {
                            foreach (var item in us)
                            {
                                <tr class="odd gradeX" id="row_@item.ID">
                                    <td>
                                        <a href="/Admin/Users/Edit/@item.ID"> Sửa </a>
                                        |
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
                                    {
                                        Confirm = "Bạn có muốn xóa bản ghi này không?",
                                        OnComplete = "$('#row_" + @item.ID + "').remove()",
                                        HttpMethod = "Delete"
                                    })
                                    </td>
                                    <td>@item.UserName</td>
                                    <td>@item.Name</td>
                                    <td>@item.Address</td>
                                    <td>@item.Position</td>
                                    <td>@item.Mobile</td>
                                    <td>@item.Email</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>

             </div>
                        <!-- /.table-responsive -->
         </div>
                    <!-- /.panel-body -->
   </div>
            <!-- /.panel -->
</div>