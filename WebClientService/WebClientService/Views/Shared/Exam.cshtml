<!DOCTYPE html>
<html>
<head>
    <title>Thi trắc nghiệm online</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/Assets/Client/css/bootstrap/bootstrap.min.css" rel="stylesheet">

    <style type="text/css">
        #field1 #question {
            height: 40%;
            float:initial;
        }

        #field2 #answer {
            height: auto;
            float:initial;
        }
        #field2 #achild
        {
            height: auto;
            width:auto;
            float:initial;
        }
        #field3 #info {
            height: 270px;
            float:initial;
        }

        #field4 #choose {
            height: 100%;
            width:auto;
            float:initial;
        }

        #divright {
            width: 25%;
            height: 100%;
            float: right;
        }

        #divleft {
            width: 74%;
            height: auto;
            float: left;
        }

        .center {
            float:unset;
        }
    </style>


</head>

<body>
    @RenderSection("Content", required: true)
    
    <script src="~/Assets/Client/js/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="../../Assets/Client/js/Exam/testExam.js"></script>
    <script type="text/javascript" src="~/Assets/Client/js/bootstrap/bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#next').bind('click', function (event) {
                var id = $('#cau').val();
                id++;
                $('#cau').val(id);
            });
            $('#back').bind('click', function (event) {
                var id = $('#cau').val();
                id--;
                
                if(id>0)
                $('#cau').val(id);
            });
        });
    </script>
    
</body>
</html>